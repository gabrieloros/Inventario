		<class>com.cvtarg.persistence.entities.UserLocation</class>
		<class>com.cvtarg.persistence.entities.Claim</class>
		<class>com.cvtarg.persistence.entities.Parameter</class>
		<class>com.cvtarg.persistence.entities.Company</class>
